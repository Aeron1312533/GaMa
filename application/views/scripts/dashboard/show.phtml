            <tr>
		<th>
			<input st-search="who_match" placeholder="search for nickname" class="input-sm form-control" type="search"/>
		</th>
            </tr>
            <tr>
                <th st-sort="id_match" st-sort-default="reverse" style="display: none;">Id Match</th>
                <th>Date</th>
                <th>Match</th>
                <th>Result</th>
            </tr>
    	</thead>
    	<tbody>
            <tr ng-repeat="row in displayedCollection2">
                <td style="display: none;">{{row.id_match}}</td>
                <td>{{row.date_created}}</td>
        	<td>{{row.who_match}}</td>
      		<td>{{row.match_result}}</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" class="text-center">
                    <div st-pagination="" st-items-by-page="10" st-displayed-pages="10"></div>
