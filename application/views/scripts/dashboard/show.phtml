    <table data-ng-hide="tableLoading" st-table="displayedCollection" st-safe-src="rowsLeagueTable" class="table table-striped">
        <thead>
            <tr>
                <th st-sort="nickname">Nickname</th>
                <th st-sort="matches">Matches</th>
                <th st-sort="wins">Wins</th>
	      	<th st-sort="loses">Loses</th>
