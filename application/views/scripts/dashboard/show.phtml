                <th st-sort="points" st-sort-default="reverse">Points</th>
      	</tr>
    	</thead>
    	<tbody>
      	<tr ng-repeat="row in displayedCollection">
      		<td>{{row.nickname}}</td>
        	<td>{{row.matches}}</td>
      		<td>{{row.wins}}</td>
    	  	<td>{{row.loses}}</td>
      		<td>{{row.score}}</td>
                <td>{{row.points}}</td>
